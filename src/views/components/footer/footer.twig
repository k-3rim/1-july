<footer class="store-footer bg-white border-t border-gray-100 pt-10 pb-0">
  <div aria-label="footer" class="store-footer__inner">
    <div class="container grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      <!-- Store Info & Social -->
      <div class="flex flex-col items-center md:items-start text-center md:text-left mb-6 md:mb-0">
        <a href="{{ link('/') }}" class="flex items-center m-0 mb-3">
          <h3 class="text-xl font-bold">{{ store.name }}</h3>
        </a>
        {% if store.description %}
          <p class="max-w-sm leading-6 mb-4 text-gray-600">{{ store.description|raw }}</p>
        {% endif %}
        <div class="mb-4 hidden md:block">
          <salla-social></salla-social>
        </div>
        {% if store.settings.tax.number %}
          <div class="flex items-end space-x-2 rtl:space-x-reverse mb-2 justify-center md:justify-start">
            {% if store.settings.tax.certificate %}
              <a class="load-img-onclick" data-modal-id="modal-value-tax" href="#/" alt="{{ store.settings.tax.number }}">
                <img width="40" height="40" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{'images/tax.png' | cdn(70,70)}}" class="lazy w-10 rounded-sm hover:opacity-80 transition-opacity" alt="value added tax">
              </a>
            {% endif %}
            <div>
              <p class="text-xs text-gray-500 mb-1">{{ trans('common.elements.tax_number') }}</p>
              <b class="text-xs">{{ store.settings.tax.number }}</b>
            </div>
          </div>
          {% if store.settings.tax.certificate %}
            <salla-modal sub-title-first sub-title="{{ trans('common.elements.tax_number') }}" modal-title="{{ store.settings.tax.number }}" id="modal-value-tax">
              <div class="flex justify-center max-w-full">
                <img class="w-full" loading="lazy" src="{{ 'images/s-empty.png' | cdn }}" data-src="{{ store.settings.tax.certificate }}" alt="{{ store.settings.tax.number }}"/>
              </div>
            </salla-modal>
          {% endif %}
        {% endif %}
      </div>
      <!-- Quick Links / Pages -->
      <div class="mb-6 md:mb-0">
        <h3 class="text-lg font-semibold mb-3">{{ trans('blocks.footer.pages_links') }}</h3>
        <salla-menu source="footer"></salla-menu>
      </div>
      <!-- Contact & Social -->
      <div class="flex flex-col items-center md:items-start text-center md:text-left">
        <h3 class="text-lg font-semibold mb-3">{{ trans('blocks.footer.contact') }}</h3>
        <salla-contacts></salla-contacts>
      </div>
    </div>
    <!-- Mobile: Social and Apps at the bottom -->
    <div class="block md:hidden mt-8">
      <div class="flex justify-center mb-4">
        <salla-social></salla-social>
      </div>
    </div>
  </div>
  <div class="border-t border-gray-100 mt-8 pt-4 pb-2">
    <div class="container flex flex-col md:flex-row items-center justify-between text-center gap-2">
      <span class="text-xs copyright-text">{% hook copyright %}</span>
      <salla-payments></salla-payments>
    </div>
  </div>
</footer>
